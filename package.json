{
    "name": "payment-server",
    "version": "1.0.0",
    "description": "Server that receives transaction requests (micro payments, balance request, etc) and forwards them to Hedera",
    "dependencies": {
        "@babel/node": "^7.2.2",
        "@babel/runtime": "^7.3.1",
        "axios": "^0.18.0",
        "debug": "^4.1.1",
        "express": "^4.16.4",
        "node-forge": "^0.7.6",
        "pg": "^7.4.3",
        "pm2": "^3.4.0",
        "socket.io": "^2.1.1"
    },
    "scripts": {
        "mock": "NODE_ENV=mock nodemon app.js --exec babel-node",
        "dev": "NODE_ENV=development nodemon app.js --exec babel-node",
        "staging-dev": "NODE_ENV=staging nodemon app.js --exec babel-node",
        "staging": "pm2 start app.json --env staging",
        "production": "pm2 start app.json --env production",
        "stop": "pm2 stop app.json",
        "logs": "pm2 logs",
        "build": "babel -d ./dist ./src -s",
        "test": "jest --detectOpenHandles --forceExit"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com/hashgraph/micropayments.git"
    },
    "contributors": [
        {
            "name": "David Matusevich"
        },
        {
            "name": "Calvin Cheng"
        },
        {
            "name": "Serene Lim"
        }
    ],
    "license": "Apache-2.0",
    "devDependencies": {
        "@babel/plugin-transform-runtime": "^7.2.0",
        "@babel/preset-env": "^7.3.1",
        "babel-jest": "^24.1.0",
        "jest": "^24.1.0",
        "nodemon": "^1.18.7"
    }
}
